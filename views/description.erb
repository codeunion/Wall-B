<h1><%= wall.title %></h1>
<h2>Description</h2>
<%= wall.description %>
<h3>Messages</h3>

<% wall.message.each() do |message| %>
Visitor Message: "<%= message.body %>" 
- <%= message.likes%> \'Likes\' "
<form method="POST" action="/message/like">
	<input name = "message[id]" type="hidden" value="<%= message.id %>" />

	<button>Like this message</button>
</form>
<% end %>

<form method="POST" action="/message">
	<label>Add a message to this wall:
		<input name = "message[body]" type="text"/>
		<input name = "wall[id]" type = "hidden" value="<%= wall.id %>" />
	</label>		
	<button>Add a message</button>
</form>