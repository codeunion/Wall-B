
<hr>

<h2>Details on the wall</h2>
<p>ID: <%= @wall.id %></p>
<p>created_by: <%= @wall.created_by %></p>
<p>title: <%= @wall.title %></p>
<p>description: <%= @wall.description %></p>
<p>created_at: <%= @wall.created_at %></p>
<h3>Likes</h3>
<p>==> 
  <form method="POST" action="/walls/1">
  <button type="submit">Like this Wall</button> 
  </form>
</p>
<h3>This post has <%= @wall.likes %> likes.</h3>
<hr>
<a href="/walls/<%= @wall.id %>/messages/new">Leave a message on this wall</a>
<hr>

<h2>Messages on this wall</h2>
<ul>
  <% @messages.each do |message| %>
  <li> Author: <%= message.created_by %>
  </li>
  <li> Content: <%= message.content %>
  </li>
  <li> Created At: <%= message.created_at %>
  </li>
  <li>
    <form method="POST" action="/walls/<%= @wall.id %>/messages/<%= message.id %>">
    <button type="submit">Like this message</button>
    </form>
  </li>
  <li>
    This post has <%= message.likes %> likes.
  </li>
  <br><br>
  <% end %>
</ul>
